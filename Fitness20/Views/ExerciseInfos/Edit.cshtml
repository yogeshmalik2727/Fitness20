@model Fitness20.Models.ExerciseInfo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Exercise Details</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExerciseID" />
            <div class="form-group">
                <label asp-for="ExerciseTypeID" class="control-label"></label>
                <select asp-for="ExerciseTypeID" class="form-control" asp-items="ViewBag.ExerciseTypeID"></select>
                <span asp-validation-for="ExerciseTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseName" class="control-label"></label>
                <input asp-for="ExerciseName" class="form-control" />
                <span asp-validation-for="ExerciseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSet" class="control-label"></label>
                <input asp-for="NumberOfSet" class="form-control" />
                <span asp-validation-for="NumberOfSet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Exercise Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Exercise</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
